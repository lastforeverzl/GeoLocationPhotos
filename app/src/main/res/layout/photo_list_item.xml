<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_avatar"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:layout_margin="@dimen/avatar_margin"
            android:transitionName="@string/avatar_transition"
            android:src="@drawable/avatar_placeholder"/>

        <LinearLayout
            android:id="@+id/location_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/avatar_margin"
            android:layout_marginBottom="@dimen/avatar_margin"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/ic_room"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="@dimen/user_name_size"
                    android:text="Beijing"/>

                <TextView
                    android:id="@+id/id_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/location_size"
                    android:text="Wenyang"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/id_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_size"
        tools:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/photo_description"
        android:padding="@dimen/avatar_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/description_size"
        android:textColor="@color/text_primary_dark"
        android:text="Blah Blah Blah Blah Blah Blah Blah Blah Blah Blah Blah Blah"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_divider_size"
        android:background="@color/colorPrimary"/>

</LinearLayout>